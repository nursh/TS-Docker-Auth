{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,                       
    "outDir": "./build",                        
    "rootDir": "./src",                       
    "strict": true,                           
    "noImplicitReturns": true,             
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "resolveJsonModule": true
  }
}
