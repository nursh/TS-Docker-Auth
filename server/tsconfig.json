{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",  
    "sourceMap": true,                   
    "lib": ["ES6"],                             
    "allowJs": true,                       
    "outDir": "./build", 
    "rootDir": "./src",                                            
    "strict": true,                                      
    "esModuleInterop": true,                                        
    "resolveJsonModule": true,
    "typeRoots": [
      "src/lib/types",
      "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "types": ["lib/types/index.ts"],
      "utils": ["lib/utils/*"],
      "utils/auth": ["lib/utils/auth/index.ts"]
    }
  },
  "exclude": [
    "./tmp",
    "./test",
    "./jest.config.js",
    "./jest-mongodb-config.js",
    "./build",
    "./bootstrap.js"
  ]
}
