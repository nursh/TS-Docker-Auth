{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",  
    "sourceMap": true,                   
    "lib": ["ES6"],                             
    "allowJs": true,                       
    "outDir": "./build",                        
    "rootDir": "./src",                       
    "strict": true,                                      
    "esModuleInterop": true,                                        
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "types": [ "src/types/index.ts" ],
      "utils/*": [ "src/utils/*" ]
    }
  },
  "exclude": [
    "./temp",
    "./jest.config.js",
    "./jest-mongodb-config.js",
    "./build"
  ]
}
