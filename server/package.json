{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js",
    "lint": "eslint --ignore-path ../.gitignore --ext .ts .",
    "prettier": "prettier --ignore-path ../.gitignore \"**/*.ts\"",
    "test": "jest"
  },
  "keywords": [],
  "author": "nur-sh",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.15.0",
    "express": "^4.17.1",
    "jest": "^26.0.1",
    "mongodb": "^3.5.9"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/mongodb": "^3.5.23",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js,.graphql",
    "ignore": [
      "node_modules"
    ],
    "execMap": {
      "js": "ts-node ./src/index.ts"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write"
    ]
  }
}
